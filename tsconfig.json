{
  "compilerOptions": {
    "strict": true,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ES6",
    "target": "ES6",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/index.ts"
      ]
    }
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
